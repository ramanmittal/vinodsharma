@model IEnumerable<vinodsharma.Models.UserlistviewModel>

@{
    ViewBag.Title = "Members";
}
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InlinerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntlinerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MembershipID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InlinerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IntlinerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @if (item.IsActive)
                {
                <span class="glyphicon glyphicon-ok"></span>
                }
                else
                {
                <span class="glyphicon glyphicon-off"></span>
                }
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <script>
             $(document).ready(function () {
                 $('table').DataTable();
             });
    </script>
}